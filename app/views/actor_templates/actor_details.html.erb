    <h1>
  Actor <%=@the_actor.id%> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/<%=@the_actor.id%>" class="btn btn-block btn-outline-secondary">
  Delete Actor
  <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@the_actor.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%=@the_actor.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%=@the_actor.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
   <%=@the_actor.image%>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=time_ago_in_words(@the_actor.created_at)%> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=time_ago_in_words(@the_actor.updated_at)%> ago
  </dd>
</dl>

<hr>

h2>Filmography</h2>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th>Character Name</th>

  </tr>


<% @characters.each do |a_character| %>
<tr>
  <td> <%m = Movie.where({ :id=>Character.where({:actor_id => a_character}).at(0).movie_id}).at(0)%><%=m.title%></td>
  <td> <%= m.year %> </td>
  <td><% d= Director.where({ :id => m.director_id}).at(0)%><%= d.name%></td>
  <td> <%c = Character.where({:actor_id => a_character}).at(0)%><%=c.name%></td>

</tr>
<%end%>
</table> 

